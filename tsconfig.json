{
  "compilerOptions": {
    "module": "Node16",
    "lib": [
      "ES2018"
    ],
    "target": "ES2018",
    "moduleResolution": "Node16",
    "types": [
      "node",
      "screeps",
      "mocha"
    ],
    "baseUrl": "./",
    "paths": {
      "*": [
        "src/*"
      ],
      "test/*": [
        "test/*"
      ],
    },
    "strict": true,
    "allowUnreachableCode": false,
    "esModuleInterop": true
  },
}
