{
  "name": "michaelansel-screeps-code",
  "version": "0.0.0",
  "description": "",
  "scripts": {
    "pre-commit": "npm run lint && npm run build && npm run test",
    "lint": "eslint \"src/**/*.ts\" \"test/**/*.ts\"",
    "build": "rm -rf dist && esbuild src/main.ts --bundle --external:main.js.map --target=es2018 --format=cjs --sourcemap --outfile=dist/main.js",
    "test": "npm run test-unit",
    "test-unit": "rm -rf dist-test && esbuild --bundle \"test/unit/**/*.test.ts\" --outdir=dist-test --external:main.js.map --sourcemap && npx mocha --require source-map-support/register \"dist-test/**/*.test.js\"",
    "upload-main": "mv dist/main.js.map dist/main.js.map.js && npx screeps-api upload --server main --branch typescript dist/*",
    "upload-ptr": "mv dist/main.js.map dist/main.js.map.js && npx screeps-api upload --server ptr --branch typescript dist/*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/michaelansel/screeps-code.git#typescript"
  },
  "author": "",
  "license": "Unlicense",
  "bugs": {
    "url": "https://github.com/michaelansel/screeps-code/issues"
  },
  "homepage": "https://github.com/michaelansel/screeps-code#readme",
  "engines": {
    "node": ">= 20.x"
  },
  "devDependencies": {
    "@types/chai": "^4.3.19",
    "@types/lodash": "^4.17.4",
    "@types/mocha": "^10.0.8",
    "@types/node": "^20.12.12",
    "@types/screeps": "^3.3.8",
    "@types/sinon": "^17.0.3",
    "@types/sinon-chai": "*",
    "@typescript-eslint/eslint-plugin": "^7.9.0",
    "@typescript-eslint/parser": "^7.9.0",
    "@typescript-eslint/typescript-estree": "^7.9.0",
    "chai": "^5.1.1",
    "esbuild": "~0.23.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "lodash": "*",
    "mocha": "^10.7.3",
    "prettier": "^3.2.5",
    "sinon": "^19.0.2",
    "sinon-chai": "*",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "source-map": "~0.6.1"
  }
}
